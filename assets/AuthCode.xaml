<Window x:Class="FdSoft.Material.WpfClient.Authorization.Index"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FdSoft.Material.WpfClient.Authorization"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:custom="clr-namespace:System.Web.UI.WebControls;assembly=System.Web"
        mc:Ignorable="d"
        Title="系统设置" Height="250" Width="630" ResizeMode="NoResize" WindowStyle="None" Background="White" AllowsTransparency="True" Icon="/Resources/SystemSetting.png">
    <Grid>
        <Border BorderBrush="#ccc" BorderThickness="1"></Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="630"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <GroupItem Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="2" Background="Transparent">
                <DockPanel Height="50" Width="630" MouseMove="TitleBar_MouseMove" VerticalAlignment="Top" HorizontalAlignment="Left" Background="#FF6498FE">
                    <TextBlock Name="txtTitle" Margin="15,0,0,0"  Padding="5,3,2,3" Text="软件授权" FontSize="14" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    <Button Click="btn_close_Click" Height="35" HorizontalAlignment="Right" Background="{x:Null}" BorderBrush="Transparent">
                        <TextBlock FontSize="30" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"><Run Text="×"/></TextBlock>
                    </Button>
                </DockPanel>
            </GroupItem>
            <GroupItem Grid.ColumnSpan="1" Grid.Column="0" Grid.Row="1">
                <UniformGrid Columns="1" Height="160">
                    <WrapPanel Margin="0,30,0,5">
                        <TextBlock Padding="10,10,10,10" FontSize="14" Width="100" Margin="30,0,0,0">授权码</TextBlock>
                        <TextBox  VerticalAlignment="Center" x:Name="txb_Path" Text=""  Width="168" Height="35" BorderBrush="#E6E6E6" BorderThickness="1" FontSize="16">
                            <materialDesign:HintAssist.Hint>
                                <StackPanel Orientation="Horizontal" Margin="10 4 0 0">
                                    <TextBlock Text="请填写授权码" />
                                </StackPanel>
                            </materialDesign:HintAssist.Hint>
                        </TextBox>
                        <TextBlock x:Name="authMsg" Padding="10,10,10,10" FontSize="14" Width="328"><Run Text=""/></TextBlock>
                    </WrapPanel>
                    <DockPanel VerticalAlignment="Bottom" HorizontalAlignment="Center">
                        <Button Click="btn_Ok" Content="确定" HorizontalAlignment="Center" VerticalAlignment="Center" DockPanel.Dock="Bottom" Padding="30,4"></Button>
                    </DockPanel>
                </UniformGrid>
            </GroupItem>
            
        </Grid>
    </Grid>
</Window>
