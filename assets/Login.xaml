<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FdSoft.Material.WpfClient"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:common="clr-namespace:FdSoft.Material.WpfClient.Common"
        xmlns:hc="https://handyorg.github.io/handycontrol" x:Class="FdSoft.Material.WpfClient.Login"
        mc:Ignorable="d"
        Title="杭州凡东科技物料系统" Height="640" Width="1080" WindowStartupLocation="CenterScreen" Icon="/Resources/fd-ico.ico"         
        WindowChrome.WindowChrome="{DynamicResource WindowChromeKey}" Background="Transparent" AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize">

    <Window.Resources>
        <WindowChrome x:Key="WindowChromeKey">
            <WindowChrome.ResizeBorderThickness>0</WindowChrome.ResizeBorderThickness>
        </WindowChrome>
    </Window.Resources>

    <Grid>
        <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="15" Background="White"/>
        <!--<Image Source="Resources/loginbg.png" Stretch="UniformToFill"></Image>-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="540"/>
                <ColumnDefinition Width="540"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="640"/>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Grid.Column="0" Width="540" Source="Resources/login-left.png"/>
            <!--<Image Source="/Resources/logo.gif" Margin="20, 20, 0, 0" HorizontalAlignment="Left" />-->
            <GroupItem Grid.Row="0" Grid.Column="1" Margin="0" FontSize="14" Loaded="GroupItem_Loaded">
                <StackPanel Orientation="Vertical">
                    <Button Click="Close_Click" HorizontalAlignment="Right" Height="54" Margin="0" Background="Transparent" BorderBrush="Transparent" Foreground="Black">
                        <TextBlock FontSize="60" Foreground="#FFCCCCCC" HorizontalAlignment="Center" VerticalAlignment="Center"><Run Text="×"/></TextBlock>
                    </Button>
                    <GroupItem Grid.Row="0" Grid.Column="1" Margin="0,50" FontSize="14" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Resources/fd-ico.ico" Width="44" HorizontalAlignment="Center" Margin="0,0,8,0"/>
                            <StackPanel Margin="0,-1,0,0">
                                <TextBlock FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"><Run Text="凡东智能物料验收系统"/></TextBlock>
                                <TextBlock FontSize="12" HorizontalAlignment="Center" Margin="0,3,0,0"><Run Text="MATERIAL ACCEPTANCE CHECK SYSTEM"/></TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </GroupItem>
                    <!--<TextBox x:Name="txt_Name" Text="" Height="56" Width="350"  Margin="0,20" BorderThickness="2" BorderBrush="#e6e6e6" />-->
                    <TextBlock Width="350" ><Run Text="账号"/></TextBlock>
                    <TextBox  Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="" VerticalAlignment="Center" x:Name="txt_Name" Height="56" Width="350"  Margin="0,10,0,20" Padding="10,4,0,0"  BorderThickness="2" BorderBrush="#e6e6e6">
                        <materialDesign:HintAssist.Hint>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="请输入手机号/账号" />
                            </StackPanel>
                        </materialDesign:HintAssist.Hint>
                    </TextBox>
                    <!--<PasswordBox  x:Name="txt_Pwd"  Password="" Height="56" Width="350"  Margin="0,20" BorderThickness="2" BorderBrush="#e6e6e6"/>-->
                    <TextBlock Width="350" ><Run Text="密码"/></TextBlock>
                    <PasswordBox  Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" VerticalAlignment="Center" x:Name="txt_Pwd"  Password="" Height="56" Width="350" Padding="10,4,0,0" Margin="0,10,0,20" BorderThickness="2" BorderBrush="#e6e6e6" PasswordChanged="txt_Pwd_PasswordChanged">
                        <materialDesign:HintAssist.Hint>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="请输入您的密码" />
                            </StackPanel>
                        </materialDesign:HintAssist.Hint>
                    </PasswordBox>
                    <Button x:Name="Down"  Click="Btn_Login" Content="立即登录" IsDefault="True" HorizontalAlignment="Center" VerticalAlignment="Top" Width="350" Height="56" Background="#FF4C82FC" BorderBrush="#FF4C82FC" Margin="0,20,0,0" Foreground="#FFFAFAFA" FontSize="18" MouseDown="Down_MouseDown"/>
                    <CheckBox x:Name="cb_Pwd" HorizontalAlignment="Center" Width="350" Margin="0,15,0,0" FontSize="12" VerticalAlignment="Center" Height="20" Padding="4,0,0,0" Content="记住密码"/>
                </StackPanel>
            </GroupItem>
        </Grid>
        <common:Loading x:Name="LoadingMask" Visibility="Collapsed"/>
    </Grid>
</Window>
