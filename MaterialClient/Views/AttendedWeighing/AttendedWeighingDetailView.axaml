<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:MaterialClient.ViewModels"
             x:Class="MaterialClient.Views.AttendedWeighing.AttendedWeighingDetailView"
             x:DataType="vm:AttendedWeighingDetailViewModel"
             x:Name="DetailViewRoot">


    <UserControl.Styles>
        <Style Selector="DataGridColumnHeader">
            <Style.Resources>
                <x:Double x:Key="DataGridSortIconMinWidth">16</x:Double>
            </Style.Resources>

            <!-- setters... -->
        </Style>
    </UserControl.Styles>

    <Grid Background="#F5F6FA" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" MinHeight="300" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--第一行-->
        <Border Grid.Row="0" Background="#EDF3FF" BorderBrush="#EDF3FF"
                BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- 第一行：重量信息 -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal"
                            VerticalAlignment="Center" Margin="0,5">
                    <TextBlock Text="毛重：" VerticalAlignment="Center"
                               FontSize="14" Foreground="#666" Width="50" />
                    <TextBlock VerticalAlignment="Center" FontSize="14">
                        <Run Foreground="#427FF9" FontWeight="Bold"
                             Text="{Binding AllWeight, StringFormat='{}{0:F2}'}" />
                        <Run Foreground="#333333" Text=" 吨" />
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal"
                            VerticalAlignment="Center" Margin="0,5">
                    <TextBlock Text="皮重：" VerticalAlignment="Center"
                               FontSize="14" Foreground="#666" Width="50" />
                    <TextBlock VerticalAlignment="Center" FontSize="14">
                        <Run Foreground="#427FF9" FontWeight="Bold"
                             Text="{Binding TruckWeight, StringFormat='{}{0:F2}'}" />
                        <Run Foreground="#333333" Text=" 吨" />
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal"
                            VerticalAlignment="Center" Margin="0,5">
                    <TextBlock Text="净重：" VerticalAlignment="Center"
                               FontSize="14" Foreground="#666" Width="50" />
                    <TextBlock VerticalAlignment="Center" FontSize="14">
                        <Run Foreground="#F5A000" FontWeight="Bold"
                             Text="{Binding GoodsWeight, StringFormat='{}{0:F2}'}" />
                        <Run Foreground="#333333" Text=" 吨" />
                    </TextBlock>
                </StackPanel>

                <!-- 第二行：时间和操作员信息 -->
                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal"
                            VerticalAlignment="Center" Margin="0,5">
                    <TextBlock Text="进场：" VerticalAlignment="Center"
                               FontSize="13" Foreground="#666" Width="50" />
                    <TextBlock Text="{Binding JoinTime, StringFormat='{}{0:MM-dd HH:mm}'}"
                               VerticalAlignment="Center" FontSize="13" Foreground="#333" />
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal"
                            VerticalAlignment="Center" Margin="0,5">
                    <TextBlock Text="出场：" VerticalAlignment="Center"
                               FontSize="13" Foreground="#666" Width="50" />
                    <TextBlock Text="{Binding OutTime, StringFormat='{}{0:MM-dd HH:mm}'}"
                               VerticalAlignment="Center" FontSize="13" Foreground="#333" />
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal"
                            VerticalAlignment="Center" Margin="0,5">
                    <TextBlock Text="操作员：" VerticalAlignment="Center"
                               FontSize="13" Foreground="#666" Width="50" />
                    <TextBlock Text="{Binding Operator}" VerticalAlignment="Center"
                               FontSize="13" Foreground="#333" />
                </StackPanel>
            </Grid>
        </Border>

        <!--第二行-->
        <Border Grid.Row="1" BorderThickness="1" BorderBrush="#B0EBFF"
                Background="White" CornerRadius="4" Padding="10" Margin="0,0,0,10">
            <StackPanel Spacing="10">
                <!-- 车牌号 -->
                <Grid ColumnDefinitions="100,*">
                    <Label Content="车牌号" VerticalAlignment="Center"
                           FontSize="16" Foreground="#333333" />
                    <TextBox Grid.Column="1" Height="40"
                             Text="{Binding PlateNumber}"
                             TextAlignment="Left" FontSize="16" />
                </Grid>
                <!-- 供应商 -->
                <Grid ColumnDefinitions="100,*">
                    <Label Content="供应商" VerticalAlignment="Center"
                           FontSize="16" Foreground="#333333" />
                    <ComboBox Grid.Column="1" Height="40"
                              Width="250"
                              FontSize="16"
                              ItemsSource="{Binding Providers}"
                              SelectedItem="{Binding SelectedProvider}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ProviderName}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>
                <!-- 备注 -->
                <Grid ColumnDefinitions="100,*">
                    <Label Content="备注" VerticalAlignment="Center"
                           FontSize="16" Foreground="#333333" />
                    <TextBox Grid.Column="1" Height="40"
                             TextWrapping="Wrap"
                             Text="{Binding Remark}"
                             TextAlignment="Left" FontSize="16" />
                </Grid>
            </StackPanel>
        </Border>

        <!--第三行-->
        <Border Grid.Row="2" BorderThickness="1" BorderBrush="#E5E7EB"
                Background="White" CornerRadius="4" Margin="0,0,0,10">
            <DataGrid ItemsSource="{Binding MaterialItems}"
                      AutoGenerateColumns="False"
                      CanUserReorderColumns="False"
                      CanUserResizeColumns="True"
                      CanUserSortColumns="False"
                      GridLinesVisibility="All"
                      HeadersVisibility="Column"
                      RowHeight="32"
                      BorderThickness="0"
                      Background="White">

                <!-- 列定义 (宽度 = 字符宽度 + 16px SortIconMinWidth) -->
                <DataGrid.Columns>
                    <!-- 材料名称 (4字) -->
                    <DataGridTemplateColumn Header="材料名称" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding SelectedMaterial.Name}"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontSize="12"
                                           Foreground="#333333"
                                           TextTrimming="CharacterEllipsis"
                                           Padding="4,0" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding  #DetailViewRoot.((vm:AttendedWeighingDetailViewModel)DataContext).Materials}"
                                          SelectedItem="{Binding SelectedMaterial, Mode=TwoWay}"
                                          DisplayMemberBinding="{Binding Name}"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          HorizontalContentAlignment="Left"
                                          VerticalContentAlignment="Center"
                                          BorderThickness="0"
                                          Background="Transparent"
                                          Padding="4,2"
                                          FontSize="12" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <!-- 单位 (2字) -->
                    <DataGridTemplateColumn Header="单位" Width="72">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding SelectedMaterialUnit.DisplayName}"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontSize="12"
                                           Foreground="#333333"
                                           TextTrimming="CharacterEllipsis"
                                           Padding="4,0" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding MaterialUnits}"
                                          SelectedItem="{Binding SelectedMaterialUnit, Mode=TwoWay}"
                                          DisplayMemberBinding="{Binding DisplayName}"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          HorizontalContentAlignment="Left"
                                          VerticalContentAlignment="Center"
                                          BorderThickness="0"
                                          Background="Transparent"
                                          Padding="4,2"
                                          FontSize="12" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <!-- 换算率 (3字) -->
                    <DataGridTemplateColumn Header="换算率" Width="62">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding RateDisplay}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextAlignment="Center"
                                           FontSize="12"
                                           Foreground="#333333" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- 运单数量 (4字) -->
                    <DataGridTemplateColumn Header="运单数量" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding WaybillQuantityDisplay}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextAlignment="Center"
                                           FontSize="12"
                                           Foreground="#333333" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <NumericUpDown Value="{Binding WaybillQuantity, Mode=TwoWay}"
                                               FormatString="F2"
                                               Increment="0.01"
                                               Minimum="0"
                                               HorizontalAlignment="Stretch"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               ShowButtonSpinner="False"
                                               BorderThickness="0"
                                               Background="Transparent" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <!-- 运单重量 (4字) -->
                    <DataGridTemplateColumn Header="运单重量" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding WaybillWeightDisplay}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextAlignment="Center"
                                           FontSize="12"
                                           Foreground="#333333" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- 实际数量 (4字) -->
                    <DataGridTemplateColumn Header="实际数量" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ActualQuantityDisplay}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextAlignment="Center"
                                           FontSize="12"
                                           Foreground="#333333" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- 实际重量 (4字) -->
                    <DataGridTemplateColumn Header="实际重量" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ActualWeightDisplay}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextAlignment="Center"
                                           FontSize="12"
                                           Foreground="#333333" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- 正负差 (3字) -->
                    <DataGridTemplateColumn Header="正负差" Width="62">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DifferenceDisplay}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextAlignment="Center"
                                           FontSize="12"
                                           Foreground="#999999" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- 偏差率 (3字) -->
                    <DataGridTemplateColumn Header="偏差率" Width="62">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DeviationRateDisplay}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextAlignment="Center"
                                           FontSize="12"
                                           Foreground="#999999" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- 偏差结果 (4字) -->
                    <DataGridTemplateColumn Header="偏差结果" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DeviationResult}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextAlignment="Center"
                                           FontSize="12"
                                           Foreground="#999999" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!--第四行：按钮栏-->
        <Grid Grid.Row="3" Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- 左侧按钮 -->
            <Button Grid.Column="0" Content="新增材料"
                    Classes="success-button"
                    Width="80" Height="32" FontSize="13"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Command="{Binding AddMaterialCommand}" />

            <!-- 中间按钮组 -->
            <StackPanel Grid.Column="1" Orientation="Horizontal"
                        HorizontalAlignment="Center" Spacing="8">
                <Button Width="90" Height="32" FontSize="14" Content="保存"
                        Classes="primary-button"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Command="{Binding SaveCommand}" />
                <Button Width="90" Height="32" FontSize="14" Content="关闭"
                        Classes="primary-button"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Command="{Binding CloseCommand}" />
                <Button Width="110" Height="32" FontSize="14" Content="完成本次收货"
                        Classes="outline-button"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Command="{Binding CompleteCommand}"
                        IsVisible="{Binding IsCompleteButtonVisible}" />
            </StackPanel>

            <!-- 右侧按钮组 -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                <Button Width="80" Height="32" FontSize="14" Content="匹配"
                        Classes="primary-button"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Command="{Binding MatchCommand}"
                        IsVisible="{Binding IsMatchButtonVisible}" />
                <Button Width="80" Height="32" FontSize="14" Content="废单"
                        Classes="warning-button"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Command="{Binding AbolishCommand}" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>