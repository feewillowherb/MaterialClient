<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MaterialClient.Views.MaterialsSelectionPopup"
             Width="600" Height="400">
    
    <Border Background="White"
            BorderBrush="#E5E7EB"
            BorderThickness="1"
            CornerRadius="4">
        <Grid RowDefinitions="Auto,*,Auto">
            
            <!-- 搜索框区域 -->
            <Border Grid.Row="0"
                    Background="White"
                    BorderBrush="#000000"
                    BorderThickness="0,0,0,1">
                <TextBox Width="598"
                         Height="35"
                         FontSize="18"
                         Watermark="输入关键字查找"
                         BorderThickness="0"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center" />
            </Border>
            
            <!-- DataGrid 区域 -->
            <Border Grid.Row="1"
                    BorderBrush="#E5E7EB"
                    BorderThickness="0,0,0,1"
                    Background="White">
                <DataGrid Width="599"
                          Height="300"
                          AutoGenerateColumns="False"
                          CanUserResizeColumns="False"
                          CanUserSortColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          HorizontalAlignment="Left"
                          BorderThickness="0"
                          Background="White"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column">
                    
                    <!-- 使用全局样式，这里只做预览 -->
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="名称"
                                           Width="*"
                                           IsReadOnly="True"
                                           CanUserSort="False">
                            <DataGridTextColumn.Header>
                                <TextBlock FontSize="18" Text="名称" />
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="规格型号"
                                           Width="120"
                                           IsReadOnly="True"
                                           CanUserSort="False">
                            <DataGridTextColumn.Header>
                                <TextBlock FontSize="18" Text="规格型号" />
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="单位"
                                           Width="100"
                                           IsReadOnly="True"
                                           CanUserSort="False">
                            <DataGridTextColumn.Header>
                                <TextBlock FontSize="18" Text="单位" />
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
            
            <!-- 分页控件区域 -->
            <Border Grid.Row="2"
                    Background="#F8F9FA"
                    BorderBrush="#E5E7EB"
                    BorderThickness="0,1,0,0"
                    Padding="12,8">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <!-- 首页按钮 -->
                    <Button Content="首页"
                            Height="25"
                            FontSize="11"
                            BorderThickness="0"
                            Background="Transparent"
                            Foreground="#1C71EC"
                            Padding="10,4"
                            Classes="transparent-button" />
                    
                    <!-- 上页按钮 -->
                    <Button Content="上页"
                            Height="25"
                            FontSize="11"
                            BorderThickness="0"
                            Background="Transparent"
                            Foreground="#1C71EC"
                            Padding="10,4"
                            Classes="transparent-button" />
                    
                    <!-- 下页按钮 -->
                    <Button Content="下页"
                            Height="25"
                            FontSize="11"
                            BorderThickness="0"
                            Background="Transparent"
                            Foreground="#1C71EC"
                            Padding="10,4"
                            Classes="transparent-button" />
                    
                    <!-- 末页按钮 -->
                    <Button Content="末页"
                            Height="25"
                            FontSize="11"
                            BorderThickness="0"
                            Background="Transparent"
                            Foreground="#1C71EC"
                            Padding="10,4"
                            Classes="transparent-button" />
                    
                    <!-- 当前页信息 -->
                    <TextBlock Text="当前页:1"
                               Width="80"
                               Height="25"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Foreground="#333" />
                    
                    <!-- 总记录数信息 -->
                    <TextBlock Text="共0条"
                               Width="100"
                               Height="25"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Foreground="#333" />
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>

