<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MaterialClient.ViewModels"
        xmlns:converters="using:MaterialClient.Converters"
        x:Class="MaterialClient.Views.SettingsWindow"
        x:DataType="vm:SettingsWindowViewModel"
        Title="系统设置"
        Width="800" Height="700"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/fd-ico.ico">

    <Window.Resources>
        <converters:ScaleUnitConverter x:Key="ScaleUnitConverter" />
    </Window.Resources>

    <Grid RowDefinitions="Auto,*,Auto" Margin="16">

        <!-- Title -->
        <TextBlock Text="系统设置"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="Black"
                   Margin="0,0,0,16" />

        <!-- Content ScrollViewer -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,16">
            <StackPanel Spacing="24">

                <!-- Scale Settings Group -->
                <Border Classes="section-border"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="地磅设置"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="Black"
                                   Margin="0,0,0,8" />

                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="12"
                              ColumnSpacing="12">
                            <TextBlock Text="串口:"
                                       Grid.Row="0"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Foreground="Black"
                                       Width="120" />
                            <ComboBox ItemsSource="{Binding AvailableSerialPorts}"
                                      SelectedItem="{Binding ScaleSerialPort}"
                                      Grid.Row="0"
                                      Grid.Column="1"
                                      PlaceholderText="请选择串口" />

                            <TextBlock Text="波特率:"
                                       Grid.Row="1"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Foreground="Black"
                                       Width="120" />
                            <TextBox Text="{Binding ScaleBaudRate}"
                                     Grid.Row="1"
                                     Grid.Column="1"
                                     Watermark="9600" />

                            <TextBlock Text="通讯方式:"
                                       Grid.Row="2"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Foreground="Black"
                                       Width="120" />
                            <TextBox Text="{Binding ScaleCommunicationMethod}"
                                     Grid.Row="2"
                                     Grid.Column="1"
                                     Watermark="TF0" />

                            <TextBlock Text="地磅单位:"
                                       Grid.Row="3"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Foreground="Black"
                                       Width="120" />
                            <ComboBox ItemsSource="{Binding ScaleUnitOptions}"
                                      SelectedItem="{Binding ScaleUnit}"
                                      Grid.Row="3"
                                      Grid.Column="1"
                                      HorizontalAlignment="Stretch">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ., Converter={StaticResource ScaleUnitConverter}}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Weighing Settings Group -->
                <Border Classes="section-border"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="称重设置"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="Black"
                                   Margin="0,0,0,8" />

                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="12"
                              ColumnSpacing="12">
                            <TextBlock Text="最小称重阈值(吨):"
                                       Grid.Row="0"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Foreground="Black"
                                       MinWidth="160" />
                            <TextBox Text="{Binding MinWeightThreshold}"
                                     Grid.Row="0"
                                     Grid.Column="1"
                                     Watermark="0.5" />

                            <TextBlock Text="重量稳定性阈值(吨):"
                                       Grid.Row="1"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Foreground="Black"
                                       MinWidth="160" />
                            <TextBox Text="{Binding WeightStabilityThreshold}"
                                     Grid.Row="1"
                                     Grid.Column="1"
                                     Watermark="0.05" />

                            <TextBlock Text="稳定性窗口时间(毫秒):"
                                       Grid.Row="2"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Foreground="Black"
                                       MinWidth="160" />
                            <TextBox Text="{Binding StabilityWindowMs}"
                                     Grid.Row="2"
                                     Grid.Column="1"
                                     Watermark="3000" />

                            <TextBlock Text="稳定性检查间隔(毫秒):"
                                       Grid.Row="3"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Foreground="Black"
                                       MinWidth="160" />
                            <TextBox Text="{Binding StabilityCheckIntervalMs}"
                                     Grid.Row="3"
                                     Grid.Column="1"
                                     Watermark="200" />

                            <TextBlock Text="匹配最大时间间隔(分钟):"
                                       Grid.Row="4"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Foreground="Black"
                                       MinWidth="160" />
                            <TextBox Text="{Binding MaxIntervalMinutes}"
                                     Grid.Row="4"
                                     Grid.Column="1"
                                     Watermark="300" />

                            <TextBlock Text="匹配最小重量差(吨):"
                                       Grid.Row="5"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Foreground="Black"
                                       MinWidth="160" />
                            <TextBox Text="{Binding MinWeightDiff}"
                                     Grid.Row="5"
                                     Grid.Column="1"
                                     Watermark="1" />
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Camera Settings Group -->
                <Border Classes="section-border"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="摄像头设置"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="Black"
                                       Grid.Column="0" />
                            <Button Content="添加"
                                    Command="{Binding AddCameraCommand}"
                                    Grid.Column="1"
                                    Classes="primary-button"
                                    Padding="12,6"
                                    CornerRadius="4" />
                        </Grid>

                        <ItemsControl ItemsSource="{Binding CameraConfigs}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:CameraConfigViewModel">
                                    <Border Classes="card-border"
                                            Padding="12"
                                            Margin="0,0,0,8">
                                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
                                              RowSpacing="8" ColumnSpacing="12">
                                            <TextBlock Text="名称:"
                                                       Grid.Row="0"
                                                       Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       Foreground="Black"
                                                       Width="80" />
                                            <TextBox Text="{Binding Name}"
                                                     Grid.Row="0"
                                                     Grid.Column="1"
                                                     Watermark="camera_1"
                                                     HorizontalAlignment="Stretch" />

                                            <TextBlock Text="IP地址:"
                                                       Grid.Row="1"
                                                       Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       Foreground="Black"
                                                       Width="80" />
                                            <TextBox Text="{Binding Ip}"
                                                     Grid.Row="1"
                                                     Grid.Column="1"
                                                     Watermark="192.168.3.245"
                                                     HorizontalAlignment="Stretch" />

                                            <TextBlock Text="端口:"
                                                       Grid.Row="2"
                                                       Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       Foreground="Black"
                                                       Width="80" />
                                            <TextBox Text="{Binding Port}"
                                                     Grid.Row="2"
                                                     Grid.Column="1"
                                                     Watermark="8000"
                                                     HorizontalAlignment="Stretch" />

                                            <TextBlock Text="通道:"
                                                       Grid.Row="3"
                                                       Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       Foreground="Black"
                                                       Width="80" />
                                            <TextBox Text="{Binding Channel}"
                                                     Grid.Row="3"
                                                     Grid.Column="1"
                                                     Watermark="1"
                                                     HorizontalAlignment="Stretch" />

                                            <TextBlock Text="用户名:"
                                                       Grid.Row="4"
                                                       Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       Foreground="Black"
                                                       Width="80" />
                                            <TextBox Text="{Binding UserName}"
                                                     Grid.Row="4"
                                                     Grid.Column="1"
                                                     Watermark="admin"
                                                     HorizontalAlignment="Stretch" />

                                            <TextBlock Text="密码:"
                                                       Grid.Row="5"
                                                       Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       Foreground="Black"
                                                       Width="80" />
                                            <Grid Grid.Row="5" Grid.Column="1" ColumnDefinitions="*,Auto">
                                                <TextBox Text="{Binding Password}"
                                                         Grid.Column="0"
                                                         Watermark="fdkj112233"
                                                         PasswordChar="*"
                                                         HorizontalAlignment="Stretch" />
                                                <Button Content="删除"
                                                        Grid.Column="1"
                                                        Command="{Binding $parent[ItemsControl].((vm:SettingsWindowViewModel)DataContext).RemoveCameraCommand}"
                                                        CommandParameter="{Binding}"
                                                        Classes="danger-button"
                                                        Margin="8,0,0,0"
                                                        Padding="12,6"
                                                        CornerRadius="4" />
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- License Plate Recognition Settings Group -->
                <Border Classes="section-border"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="车牌识别设置"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="Black"
                                       Grid.Column="0" />
                            <Button Content="添加"
                                    Command="{Binding AddLicensePlateRecognitionCommand}"
                                    Grid.Column="1"
                                    Classes="primary-button"
                                    Padding="12,6"
                                    CornerRadius="4" />
                        </Grid>

                        <ItemsControl ItemsSource="{Binding LicensePlateRecognitionConfigs}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:LicensePlateRecognitionConfigViewModel">
                                    <Border Classes="card-border"
                                            Padding="12"
                                            Margin="0,0,0,8">
                                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="8"
                                              ColumnSpacing="12">
                                            <TextBlock Text="名称:"
                                                       Grid.Row="0"
                                                       Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       Foreground="Black"
                                                       Width="80" />
                                            <TextBox Text="{Binding Name}"
                                                     Grid.Row="0"
                                                     Grid.Column="1"
                                                     Watermark="camera_1"
                                                     HorizontalAlignment="Stretch" />

                                            <TextBlock Text="IP地址:"
                                                       Grid.Row="1"
                                                       Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       Foreground="Black"
                                                       Width="80" />
                                            <TextBox Text="{Binding Ip}"
                                                     Grid.Row="1"
                                                     Grid.Column="1"
                                                     Watermark="192.168.3.245"
                                                     HorizontalAlignment="Stretch" />

                                            <TextBlock Text="方向:"
                                                       Grid.Row="2"
                                                       Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       Foreground="Black"
                                                       Width="80" />
                                            <Grid Grid.Row="2" Grid.Column="1" ColumnDefinitions="*,Auto">
                                                <ComboBox SelectedIndex="{Binding DirectionIndex}"
                                                          Grid.Column="0"
                                                          HorizontalAlignment="Stretch">
                                                    <ComboBoxItem Content="进场" />
                                                    <ComboBoxItem Content="出场" />
                                                </ComboBox>
                                                <Button Content="删除"
                                                        Grid.Column="1"
                                                        Command="{Binding $parent[ItemsControl].((vm:SettingsWindowViewModel)DataContext).RemoveLicensePlateRecognitionCommand}"
                                                        CommandParameter="{Binding}"
                                                        Classes="danger-button"
                                                        Margin="8,0,0,0"
                                                        Padding="12,6"
                                                        CornerRadius="4" />
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- System Settings Group -->
                <Border Classes="section-border"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="系统设置"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="Black"
                                   Margin="0,0,0,8" />

                        <CheckBox Content="开机自动启动"
                                  IsChecked="{Binding EnableAutoStart}" />
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Buttons -->
        <Grid Grid.Row="2"
              ColumnDefinitions="*,Auto,Auto"
              ColumnSpacing="12">
            <Button Content="取消"
                    Grid.Column="1"
                    Command="{Binding CancelCommand}"
                    Classes="secondary-button"
                    Padding="24,8"
                    CornerRadius="4" />
            <Button Content="保存"
                    Grid.Column="2"
                    Command="{Binding SaveCommand}"
                    Classes="primary-button"
                    Padding="24,8"
                    CornerRadius="4" />
        </Grid>

    </Grid>
</Window>