<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:MaterialClient.ViewModels"
             x:Class="MaterialClient.Views.AttendedWeighingDetailView"
             x:DataType="vm:AttendedWeighingDetailViewModel">
    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">
        <Grid Background="#F5F6FA" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" MinHeight="300" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!--第一行-->
            <Border Grid.Row="0" Background="#EDF3FF" BorderBrush="#EDF3FF"
                    BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <!-- 第一行：重量信息 -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" 
                                VerticalAlignment="Center" Margin="0,5">
                        <TextBlock Text="毛重：" VerticalAlignment="Center" 
                                   FontSize="14" Foreground="#666" Width="50" />
                        <TextBlock VerticalAlignment="Center" FontSize="14">
                            <Run Foreground="#427FF9" FontWeight="Bold" 
                                 Text="{Binding AllWeight, StringFormat='{}{0:F2}'}" />
                            <Run Foreground="#333333" Text=" 吨" />
                        </TextBlock>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" 
                                VerticalAlignment="Center" Margin="0,5">
                        <TextBlock Text="皮重：" VerticalAlignment="Center" 
                                   FontSize="14" Foreground="#666" Width="50" />
                        <TextBlock VerticalAlignment="Center" FontSize="14">
                            <Run Foreground="#427FF9" FontWeight="Bold" 
                                 Text="{Binding TruckWeight, StringFormat='{}{0:F2}'}" />
                            <Run Foreground="#333333" Text=" 吨" />
                        </TextBlock>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" 
                                VerticalAlignment="Center" Margin="0,5">
                        <TextBlock Text="净重：" VerticalAlignment="Center" 
                                   FontSize="14" Foreground="#666" Width="50" />
                        <TextBlock VerticalAlignment="Center" FontSize="14">
                            <Run Foreground="#F5A000" FontWeight="Bold"
                                 Text="{Binding GoodsWeight, StringFormat='{}{0:F2}'}" />
                            <Run Foreground="#333333" Text=" 吨" />
                        </TextBlock>
                    </StackPanel>
                    
                    <!-- 第二行：时间和操作员信息 -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" 
                                VerticalAlignment="Center" Margin="0,5">
                        <TextBlock Text="进场：" VerticalAlignment="Center" 
                                   FontSize="13" Foreground="#666" Width="50" />
                        <TextBlock Text="{Binding JoinTime, StringFormat='{}{0:MM-dd HH:mm}'}" 
                                   VerticalAlignment="Center" FontSize="13" Foreground="#333" />
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" 
                                VerticalAlignment="Center" Margin="0,5">
                        <TextBlock Text="出场：" VerticalAlignment="Center" 
                                   FontSize="13" Foreground="#666" Width="50" />
                        <TextBlock Text="{Binding OutTime, StringFormat='{}{0:MM-dd HH:mm}'}" 
                                   VerticalAlignment="Center" FontSize="13" Foreground="#333" />
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" 
                                VerticalAlignment="Center" Margin="0,5">
                        <TextBlock Text="操作员：" VerticalAlignment="Center" 
                                   FontSize="13" Foreground="#666" Width="50" />
                        <TextBlock Text="{Binding Operator}" VerticalAlignment="Center" 
                                   FontSize="13" Foreground="#333" />
                    </StackPanel>
                </Grid>
            </Border>

            <!--第二行-->
            <Border Grid.Row="1" BorderThickness="1" BorderBrush="#B0EBFF" 
                    Background="White" CornerRadius="4" Padding="10" Margin="0,0,0,10">
                <StackPanel Spacing="10">
                    <!-- 车牌号 -->
                    <Grid ColumnDefinitions="100,*">
                        <Label Content="车牌号" VerticalAlignment="Center"
                               FontSize="16" Foreground="#333333" />
                        <TextBox Grid.Column="1" Height="40"
                                 Text="{Binding PlateNumber}"
                                 TextAlignment="Left" FontSize="16" />
                    </Grid>
                    <!-- 供应商 -->
                    <Grid ColumnDefinitions="100,*">
                        <Label Content="供应商" VerticalAlignment="Center"
                               FontSize="16" Foreground="#333333" />
                        <ComboBox Grid.Column="1" Height="40"
                                  FontSize="16"
                                  ItemsSource="{Binding Providers}"
                                  SelectedItem="{Binding SelectedProvider}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ProviderName}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>
                    <!-- 备注 -->
                    <Grid ColumnDefinitions="100,*">
                        <Label Content="备注" VerticalAlignment="Center"
                               FontSize="16" Foreground="#333333" />
                        <TextBox Grid.Column="1" Height="40"
                                 TextWrapping="Wrap"
                                 Text="{Binding Remark}"
                                 TextAlignment="Left" FontSize="16" />
                    </Grid>
                </StackPanel>
            </Border>

            <!--第三行-->
            <Border Grid.Row="2" BorderThickness="1" BorderBrush="#E5E7EB" 
                    Background="White" CornerRadius="4" Margin="0,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <!-- 表头 -->
                    <Border Grid.Row="0" Background="#6498FE" CornerRadius="4,4,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="85" />
                                <ColumnDefinition Width="75" />
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="70" />
                            </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" BorderThickness="0,0,1,0" BorderBrush="#4A7FE8">
                            <TextBlock Height="32" FontSize="12" FontWeight="SemiBold"
                                       Foreground="White" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" TextAlignment="Center" Text="材料名称" />
                        </Border>
                        <Border Grid.Column="1" BorderThickness="0,0,1,0" BorderBrush="#4A7FE8">
                            <TextBlock Height="32" FontSize="12" FontWeight="SemiBold"
                                       Foreground="White" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" TextAlignment="Center" Text="单位" />
                        </Border>
                        <Border Grid.Column="2" BorderThickness="0,0,1,0" BorderBrush="#4A7FE8">
                            <TextBlock Height="32" FontSize="12" FontWeight="SemiBold"
                                       Foreground="White" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" TextAlignment="Center" Text="换算率" />
                        </Border>
                        <Border Grid.Column="3" BorderThickness="0,0,1,0" BorderBrush="#4A7FE8">
                            <TextBlock Height="32" FontSize="12" FontWeight="SemiBold"
                                       Foreground="White" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" TextAlignment="Center" Text="运单数量" />
                        </Border>
                        <Border Grid.Column="4" BorderThickness="0,0,1,0" BorderBrush="#4A7FE8">
                            <TextBlock Height="32" FontSize="12" FontWeight="SemiBold"
                                       Foreground="White" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" TextAlignment="Center" Text="运单重量" />
                        </Border>
                        <Border Grid.Column="5" BorderThickness="0,0,1,0" BorderBrush="#4A7FE8">
                            <TextBlock Height="32" FontSize="12" FontWeight="SemiBold"
                                       Foreground="White" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" TextAlignment="Center" Text="实际数量" />
                        </Border>
                        <Border Grid.Column="6" BorderThickness="0,0,1,0" BorderBrush="#4A7FE8">
                            <TextBlock Height="32" FontSize="12" FontWeight="SemiBold"
                                       Foreground="White" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" TextAlignment="Center" Text="实际重量" />
                        </Border>
                        <Border Grid.Column="7" BorderThickness="0,0,1,0" BorderBrush="#4A7FE8">
                            <TextBlock Height="32" FontSize="12" FontWeight="SemiBold"
                                       Foreground="White" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" TextAlignment="Center" Text="正负差" />
                        </Border>
                        <Border Grid.Column="8" BorderThickness="0,0,1,0" BorderBrush="#4A7FE8">
                            <TextBlock Height="32" FontSize="12" FontWeight="SemiBold"
                                       Foreground="White" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" TextAlignment="Center" Text="偏差率" />
                        </Border>
                        <Border Grid.Column="9">
                            <TextBlock Height="32" FontSize="12" FontWeight="SemiBold"
                                       Foreground="White" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" TextAlignment="Center" Text="偏差结果" />
                        </Border>
                        </Grid>
                    </Border>
                    <!-- 数据区域 -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <StackPanel x:Name="grid_Og_Items">
                            <!-- 数据行 -->
                            <Border BorderThickness="0,0,0,1" BorderBrush="#E5E7EB" Background="White">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="85" />
                                        <ColumnDefinition Width="75" />
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="70" />
                                        <ColumnDefinition Width="70" />
                                        <ColumnDefinition Width="70" />
                                        <ColumnDefinition Width="70" />
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="70" />
                                    </Grid.ColumnDefinitions>
                                
                                <!-- 数据单元格 -->
                                <Border Grid.Column="0" BorderThickness="0,0,1,0" BorderBrush="#E5E7EB">
                                    <ComboBox Height="32" FontSize="12"
                                              Padding="4,2"
                                              ItemsSource="{Binding Materials}"
                                              SelectedItem="{Binding SelectedMaterial}"
                                              BorderThickness="0"
                                              Background="Transparent">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}" FontSize="11" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </Border>
                                <Border Grid.Column="1" BorderThickness="0,0,1,0" BorderBrush="#E5E7EB">
                                    <ComboBox Height="32" FontSize="12"
                                              Padding="4,2"
                                              ItemsSource="{Binding MaterialUnits}"
                                              SelectedItem="{Binding SelectedMaterialUnit}"
                                              BorderThickness="0"
                                              Background="Transparent">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding UnitName}" FontSize="11" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </Border>
                                <Border Grid.Column="2" BorderThickness="0,0,1,0" BorderBrush="#E5E7EB">
                                    <TextBlock Height="32" FontSize="12"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               TextAlignment="Center" 
                                               Text="{Binding SelectedMaterialUnit.Rate, StringFormat='{}{0:F2}'}" 
                                               Foreground="#333333" />
                                </Border>
                                <Border Grid.Column="3" BorderThickness="0,0,1,0" BorderBrush="#E5E7EB">
                                    <TextBox Height="32" FontSize="12"
                                             Padding="4,0"
                                             TextAlignment="Center" 
                                             Text="{Binding WaybillQuantity}"
                                             BorderThickness="0"
                                             Background="Transparent" />
                                </Border>
                                <Border Grid.Column="4" BorderThickness="0,0,1,0" BorderBrush="#E5E7EB">
                                    <TextBlock Height="32" FontSize="12"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               TextAlignment="Center" Text="0" Foreground="#333333" />
                                </Border>
                                <Border Grid.Column="5" BorderThickness="0,0,1,0" BorderBrush="#E5E7EB">
                                    <TextBlock Height="32" FontSize="12"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               TextAlignment="Center" Text="0" Foreground="#333333" />
                                </Border>
                                <Border Grid.Column="6" BorderThickness="0,0,1,0" BorderBrush="#E5E7EB">
                                    <TextBlock Height="32" FontSize="12"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               TextAlignment="Center" Text="默认" Foreground="#333333" />
                                </Border>
                                <Border Grid.Column="7" BorderThickness="0,0,1,0" BorderBrush="#E5E7EB">
                                    <TextBlock Height="32" FontSize="12"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               TextAlignment="Center" Text="-" Foreground="#999999" />
                                </Border>
                                <Border Grid.Column="8" BorderThickness="0,0,1,0" BorderBrush="#E5E7EB">
                                    <TextBlock Height="32" FontSize="12"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               TextAlignment="Center" Text="-" Foreground="#999999" />
                                </Border>
                                <Border Grid.Column="9">
                                    <TextBlock Height="32" FontSize="12"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               TextAlignment="Center" Text="-" Foreground="#999999" />
                                </Border>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!--第四行：按钮栏-->
            <Grid Grid.Row="3" Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <!-- 左侧按钮 -->
                <Button Grid.Column="0" Content="新增材料" 
                        Classes="success-button"
                        Width="80" Height="32" FontSize="13"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Command="{Binding AddGoodsCommand}" />
                
                <!-- 中间按钮组 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" 
                            HorizontalAlignment="Center" Spacing="8">
                    <Button Width="90" Height="32" FontSize="14" Content="保存"
                            Classes="primary-button"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Command="{Binding SaveCommand}" />
                    <Button Width="90" Height="32" FontSize="14" Content="关闭"
                            Classes="primary-button"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Command="{Binding CloseCommand}" />
                    <Button Width="110" Height="32" FontSize="14" Content="完成本次收货" 
                            Classes="outline-button"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Command="{Binding CompleteCommand}" />
                </StackPanel>
                
                <!-- 右侧按钮组 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                    <Button Width="80" Height="32" FontSize="14" Content="匹配"
                            Classes="primary-button"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Command="{Binding MatchCommand}"
                            IsVisible="{Binding IsMatchButtonVisible}" />
                    <Button Width="80" Height="32" FontSize="14" Content="废单"
                            Classes="warning-button"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Command="{Binding AbolishCommand}" />
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
